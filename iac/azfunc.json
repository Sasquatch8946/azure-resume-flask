      "type": "string"
    },
    "funcAppName": {
      "type": "string",
      "defaultValue": "[format('crcfunc{0}', parameters('guidValue'))]"
    },
    "runtime": {
      "type": "string",
      "defaultValue": "python"
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS"
    },
    "cosmosDBConnectionString": {
      "type": "securestring"
